<%
  resource = JSON.parse(obj['json'])
%>

<div id="public-result-summary">
	<p><strong>ID:</strong> <%= resource['id_0'] %></p>
	<% resource['linked_agents'].each do |linked_agent| %>
		<% id = JSONModel(linked_agent['_resolved']['jsonmodel_type']).id_for(linked_agent['_resolved']['uri']) %>
		<% if linked_agent['role'] == "creator" %>
			<p><strong>Creator:</strong> <%= link_to(linked_agent['_resolved']['title'], {:controller => :records, :action => :agent, :id => id, :agent_type => linked_agent['_resolved']['jsonmodel_type']}) %></p>
		<% end %>
	<% end %>
	</p>
	<% resource['notes'].each do |note| %>
		<% if note['type'] == "abstract" %>
			<p><strong>Abstract:</strong> <%= note['content'][0].sub(/^\<p\>/, "").html_safe %>
		<% end %>
	<% end %>
</div>
